<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1>Frenzy Store Community</h1>
    <p>Welcome to the community! Users must fill out profile to appear on community page.</p>
    <ul class="list-unstyled">
      <% @users.each do |user| %>
          <% if user.profile %>
            <li>
              <div class="well row">
                <div class="col-sm-4 text-center">
                  <% if user.profile.avatar %>
                    <%= link_to user do %>
                    <%= image_tag user.profile.avatar.url(:thumb), class: 'user-index-avatar' %>  
                    <% end %>
                  <% end %>  
                </div>
              <div>
                <%= link_to user do %>
                <h2><%= user.profile.first_name %><%= user.profile.last_name %></h2>
                <% end %>
                <p><%= user.profile.job_title %></p>
              </div>
            </div>
            </li>
          <% end %> 
      <% end %>
    </ul>
  </div>
</div>