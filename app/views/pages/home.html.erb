<div class="jumbotron text-center">
  <h1>Welcome to Frenzy</h1>
  <h3>Find what you want to buy faster!</h3> 
</div>
<div class="row">
  <% if user_signed_in? %>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Your Profile</h2>
    <% if current_user.profile %>
      <%= link_to "Edit Profile", edit_user_profile_path(current_user), class: 'btn btn-primary btn-lg btn-block' %><br/>
      <%= link_to "View Profile", user_path(current_user), class: 'btn btn-primary btn-lg btn-block' %>
    <% else %>
      <p>Complete your profile so you can share with the community</p>
      <%= link_to "Create Profile", new_user_profile_path(current_user), class: 'btn btn-primary btn-lg btn-block'%>
    <% end %>
  </div>
</div>
  <div class="col-md-6">
    <div class="well">
      <h2 class="text-center">The Community</h2>
      <p>Visit the community to meet other people like you</p>
      <%= link_to "Visit the community", users_path, class: 'btn btn-primary btn-lg btn-block' %>
    </div>
  </div>

  <% else %>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Basic Membership</h2>
          <h4 class="text-center">Sign up for free and get basic access.</h4>
          <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block'%>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Pro Membership</h2>
          <h4 class="text-center">Sign up for pro and get access to all features.</h4>
            <%= link_to "Sign up with Pro", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block'%>
      </div>
    </div>
  <% end %>
</div>